<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/chat1">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.example.test2.FirstFragment"
            android:label="@string/first_fragment_label"
            tools:layout="@layout/fragment_first">

        <action
                android:id="@+id/action_FirstFragment_to_SecondFragment"
                app:destination="@id/SecondFragment"/>
        <action
            android:id="@+id/action_firstfragment_to_chat1"
            app:destination="@id/chat1"
            app:enterAnim="@anim/alpha_enter"
            app:exitAnim="@anim/alpha_exit" />
    </fragment>
    <fragment
            android:id="@+id/SecondFragment"
            android:name="com.example.test2.SecondFragment"
            android:label="@string/second_fragment_label"
            tools:layout="@layout/fragment_second">

        <action
                android:id="@+id/action_SecondFragment_to_FirstFragment"
                app:destination="@id/FirstFragment"/>
    </fragment>
    <fragment
        android:id="@+id/chat1"
        android:name="com.example.test2.chat1"
        android:label="@string/chat1_label"
        tools:layout="@layout/fragment_chat1">

        <action
            android:id="@+id/action_chat1_to_firstfragment"
            app:destination="@id/FirstFragment"
            app:enterAnim="@anim/torightanim_enter"
            app:exitAnim="@anim/torightanim_exit" />
    </fragment>
</navigation>