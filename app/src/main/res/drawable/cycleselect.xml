<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="false"
        android:id="@+id/cycleon"
        android:drawable="@drawable/cyclet1"/>

    <item
        android:id="@+id/cycleoff"
        android:drawable="@drawable/cyclet1"
        android:state_checked="true"
        />

    <transition
        android:drawable="@drawable/cycleanimbind2"
        android:fromId="@id/cycleon"
        android:toId="@id/cycleoff"/>

    <transition
        android:drawable="@drawable/cycleanimbind3"
        android:fromId="@id/cycleoff"
        android:toId="@id/cycleon"/>
</animated-selector>